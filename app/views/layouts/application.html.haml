!!!
%html
  %head
    %meta{ content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Owners2
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header
      = link_to root_path do
        %p.logo Owners
      %ul.icon
        %li
          %i.fa.fa-question-circle.fa-log
          %a OWNERSについて
        %li
          %i.fa.fa-book.fa-log
          %a 使い方
        - if user_signed_in?
          %li
            %i.fa.fa-user.fa-log
            %a #{ current_user.name }さん
          %li
            %i.fa.fa-angle-down.fa-log
          %li.dropdown
            %button#dropdownMenu1.btn.btn-default.dropdown-toggle{aria: {expanded: "true", haspopup: "true"}, data: {toggle: "dropdown"}, type: "button"}
            .dropdown-menu{aria: {labelledby: "dropdownMenuButton"}}
              %ul.box
                %li
                  %a.dropdown-item{href: "#"} ダッシュボード
                %li
                  %a.dropdown-item{href: "#"} 送り先情報
                %li
                  %a.dropdown-item{href: "#"} アカウント設定
                %li
                  %a.dropdown-item
                  = link_to "ログアウト", destroy_user_session_path, method: :delete
        - else
          %li
            %i.fa.fa-plus-circle.fa-log
            %a
            = link_to "会員登録", new_user_registration_path
          %li
            %i.fa.fa-user.fa-log
            %a
            = link_to "ログイン", user_session_path

  = yield
